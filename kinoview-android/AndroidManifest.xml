<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.atott.kinoview.android"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="15"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:name=".KinoviewApplication">
        <activity android:theme="@android:style/Theme.Holo.Light.DarkActionBar" android:name=".activity.TabsActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <provider android:name=".provider.CinemaProvider" android:authorities="ru.atott.kinoview.android.provider.CinemaProvider" />
        <provider android:name=".provider.FilmProvider" android:authorities="ru.atott.kinoview.android.provider.FilmProvider" />
    </application>
</manifest>
